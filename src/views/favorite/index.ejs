<div class="min-h-screen bg-transparent pt-32 pb-20">
    <div class="max-w-[1800px] mx-auto px-6 md:px-12">
        <!-- Cinematic Header -->
        <header class="relative mb-16 overflow-hidden">
            <div
                class="flex flex-col md:flex-row md:items-end justify-between gap-8 border-l-8 border-pink-600 pl-8 py-4 bg-white/5 backdrop-blur-3xl rounded-r-sm">
                <div class="space-y-2">
                    <span class="text-pink-500 font-black text-xs uppercase tracking-[0.4em] italic mb-2 block">Your
                        Collection</span>
                    <h1
                        class="text-5xl md:text-7xl font-black text-white uppercase italic tracking-tighter leading-none">
                        My <span class="text-white/20">Favorites</span>
                    </h1>
                </div>

                <div class="flex items-center gap-4">
                    <div class="bg-black/40 border border-white/10 px-6 py-3 rounded-sm backdrop-blur-md">
                        <span id="favoritesCount" class="text-xl font-black text-white italic">0</span>
                        <span class="text-[10px] font-black text-white/30 uppercase tracking-widest ml-2">Items
                            Saved</span>
                    </div>
                </div>
            </div>
        </header>

        <!-- Dynamic Grid (Populated by JS) -->
        <main id="favoritesGrid"
            class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-6 md:gap-8 min-h-[400px]">
            <!-- Skeleton Loading -->
            <% for(let i=0; i<12; i++) { %>
                <div class="favorite-skeleton space-y-4">
                    <div class="aspect-[2/3] bg-white/5 rounded-sm animate-pulse"></div>
                    <div class="h-4 bg-white/5 rounded-sm animate-pulse w-3/4"></div>
                </div>
                <% } %>
        </main>

        <!-- Empty State (Hidden by default) -->
        <div id="emptyState"
            class="hidden flex flex-col items-center justify-center py-32 text-center space-y-8 bg-white/[0.02] border border-white/5 rounded-sm">
            <div
                class="w-24 h-24 rounded-full bg-pink-600/10 flex items-center justify-center border border-pink-500/20">
                <svg class="w-10 h-10 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
            </div>
            <div class="space-y-2">
                <h2 class="text-3xl font-black text-white uppercase italic tracking-tighter">No Favorites Yet</h2>
                <p class="text-white/30 text-xs font-black uppercase tracking-widest">Discover your next story and save
                    it here.</p>
            </div>
            <a href="/"
                class="px-10 py-4 bg-white text-black font-black uppercase text-[10px] tracking-[0.3em] hover:bg-pink-600 hover:text-white transition-all rounded-sm italic">
                Explore Manga
            </a>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const grid = document.getElementById('favoritesGrid');
        const emptyState = document.getElementById('emptyState');
        const countDisplay = document.getElementById('favoritesCount');

        function wsrvUrl(url) {
            if (!url) return '/images/fallback.png';
            if (url.includes('wsrv.nl')) return url;
            if (url.startsWith('/')) return url;
            return `https://wsrv.nl/?url=${encodeURIComponent(url)}&n=-1`;
        }

        function renderFavorites() {
            const favorites = JSON.parse(localStorage.getItem('komikkuya_favorites') || '[]');

            // Clear grid
            grid.innerHTML = '';
            countDisplay.textContent = favorites.length;

            if (favorites.length === 0) {
                grid.classList.add('hidden');
                emptyState.classList.remove('hidden');
                return;
            }

            grid.classList.remove('hidden');
            emptyState.classList.add('hidden');

            favorites.forEach((item, index) => {
                const card = document.createElement('div');
                card.className = 'group/card relative animate-fade-in opacity-0';
                card.style.animationDelay = `${index * 50}ms`;
                card.style.animationFillMode = 'forwards';

                const url = item.type === 'doujin' ? `/doujin/${item.slug}` : `/manga/${item.slug}`;

                card.innerHTML = `
                    <div class="block space-y-4 relative">
                        <a href="${url}" class="block">
                            <div class="relative aspect-[2/3] rounded-sm overflow-hidden border border-white/5 shadow-2xl transition-all duration-700 group-hover/card:scale-105 group-hover/card:-translate-y-2 group-hover/card:shadow-pink-600/20">
                                <img src="${wsrvUrl(item.cover)}" alt="${item.title}"
                                    class="w-full h-full object-cover transition-transform duration-700 group-hover/card:scale-110"
                                    loading="lazy">
                                <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-60"></div>
                                <div class="absolute top-4 left-4">
                                    <span class="bg-pink-600 text-white text-[8px] font-black px-2 py-1 rounded-sm uppercase tracking-widest italic">
                                        ${item.type}
                                    </span>
                                </div>
                            </div>
                            <div class="space-y-1.5 px-1 pt-4">
                                <h3 class="text-xs font-black text-white uppercase italic tracking-tighter line-clamp-2 leading-tight group-hover/card:text-pink-400 transition-colors">
                                    ${item.title}
                                </h3>
                                <p class="text-[9px] font-black text-white/20 uppercase tracking-widest italic">${item.source || 'Server'}</p>
                            </div>
                        </a>
                        <button onclick="removeFavorite('${item.id}')" class="absolute top-4 right-4 p-2 bg-black/60 backdrop-blur-md rounded-sm text-white/40 hover:text-pink-500 transition-colors border border-white/10 opacity-0 group-hover/card:opacity-100">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/></svg>
                        </button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        window.removeFavorite = function (id) {
            let favorites = JSON.parse(localStorage.getItem('komikkuya_favorites') || '[]');
            favorites = favorites.filter(item => item.id !== id);
            localStorage.setItem('komikkuya_favorites', JSON.stringify(favorites));
            renderFavorites();
        };

        renderFavorites();
    });
</script>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }
</style>