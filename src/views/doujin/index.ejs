                        </svg>
                        Join Channel
                    </a>

                    <!-- Server Settings Trigger -->
                    <button id="openServerModal"
                        class="px-6 py-3 bg-white/5 border border-white/10 text-white font-black uppercase text-[10px] tracking-widest rounded-sm hover:bg-white/10 transition-all flex items-center gap-2 italic">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                        </svg>
                        Server Settings
                    </button>
                </div>
            </div>
        </header>

        <!-- Immersive Grid -->
        <main class="min-w-0">
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-6 md:gap-8">
                <% items.forEach((doujin, index)=> { %>
                    <div class="group/card relative animate-fade-in opacity-0"
                        style="animation-delay: <%= index * 50 %>ms; animation-fill-mode: forwards;">
                        <a href="/doujin/<%= doujin.slug %>" class="block space-y-4">
                            <div
                                class="relative aspect-[2/3] rounded-sm overflow-hidden border border-white/5 shadow-2xl transition-all duration-700 group-hover/card:scale-105 group-hover/card:-translate-y-2 group-hover/card:shadow-purple-600/20">
                                <img src="<%= doujin.imageUrl %>" alt="<%= doujin.title %>"
                                    class="w-full h-full object-cover transition-transform duration-700 group-hover/card:scale-110"
                                    loading="lazy" onerror="this.onerror=null; this.src='/images/fallback.png';">

                                <!-- Hover Overlay -->
                                <div
                                    class="absolute inset-0 bg-gradient-to-t from-primary-950 via-primary-950/20 to-transparent opacity-0 group-hover/card:opacity-100 transition-opacity duration-500">
                                </div>

                                <!-- Meta Badges -->
                                <div class="absolute top-4 left-4 flex flex-col gap-2">
                                    <span
                                        class="bg-black/60 backdrop-blur-md text-white text-[8px] font-black px-2 py-1 rounded-sm border border-white/10 uppercase tracking-widest w-fit">
                                        <%= doujin.latestChapter %>
                                    </span>
                                </div>

                                <!-- Quick Info -->
                                <div
                                    class="absolute bottom-4 left-4 right-4 translate-y-4 opacity-0 group-hover/card:translate-y-0 group-hover/card:opacity-100 transition-all duration-500">
                                    <% if (doujin.genres && doujin.genres.length> 0) { %>
                                        <div class="flex flex-wrap gap-1">
                                            <% doujin.genres.slice(0, 2).forEach(genre=> { %>
                                                <span
                                                    class="text-[8px] font-black text-white/60 uppercase tracking-widest italic bg-white/5 px-2 py-0.5 rounded-sm">
                                                    <%= genre %>
                                                </span>
                                                <% }); %>
                                        </div>
                                        <% } %>
                                </div>
                            </div>

                            <div class="space-y-1.5 px-1 pb-4">
                                <h3
                                    class="text-xs font-black text-white uppercase italic tracking-tighter line-clamp-2 leading-tight group-hover/card:text-purple-400 transition-colors">
                                    <%= doujin.title %>
                                </h3>
                            </div>
                        </a>
                    </div>
                    <% }) %>
            </div>

            <!-- Premium Pagination -->
            <div class="mt-20 flex flex-col items-center gap-8">
                <div class="flex items-center gap-1 bg-white/5 border border-white/5 p-1 rounded-sm backdrop-blur-xl">
                    <a href="/doujin?page=1"
                        class="p-3 text-white/20 hover:text-white hover:bg-white/5 transition-all rounded-sm"
                        title="First Page">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
                        </svg>
                    </a>

                    <a href="/doujin?page=<%= pagination.prev || 1 %>"
                        class="p-3 text-white/40 hover:text-white hover:bg-white/5 transition-all rounded-sm <%= !pagination.prev ? 'pointer-events-none opacity-20' : '' %>">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                d="M15 19l-7-7 7-7" />
                        </svg>
                    </a>

                    <div class="flex items-center px-8 space-x-2">
                        <span class="text-xs font-black text-white italic">
                            <%= pagination.page %>
                        </span>
                        <span
                            class="text-[10px] font-black text-white/20 uppercase tracking-widest italic whitespace-nowrap">of
                            <%= pagination.totalPages %></span>
                    </div>

                    <a href="/doujin?page=<%= pagination.next || pagination.page %>"
                        class="p-3 text-white/40 hover:text-white hover:bg-white/5 transition-all rounded-sm <%= !pagination.next ? 'pointer-events-none opacity-20' : '' %>">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>

                    <a href="/doujin?page=<%= pagination.totalPages %>"
                        class="p-3 text-white/20 hover:text-white hover:bg-white/5 transition-all rounded-sm"
                        title="Last Page">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                d="M13 5l7 7-7 7M5 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>

                <!-- Page Jump Jump -->
                <div class="flex items-center gap-4 bg-black/20 p-2 rounded-sm border border-white/5">
                    <span class="text-[10px] font-black text-white/20 uppercase tracking-widest italic ml-2">Jump
                        to</span>
                    <input type="number" id="pageJump" min="1" max="<%= pagination.totalPages %>"
                        value="<%= pagination.page %>"
                        class="w-16 h-10 bg-white/5 border border-white/5 rounded-sm text-center text-xs font-black text-white focus:outline-none focus:border-purple-500 transition-colors">
                    <button onclick="jumpToPage()"
                        class="px-6 h-10 bg-purple-600 text-white text-[10px] font-black uppercase tracking-widest transition-all rounded-sm hover:bg-purple-500 italic">
                        Go
                    </button>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Server Selection Modal (Modernized) -->
<div id="serverModal" class="fixed inset-0 z-[200] hidden">
    <div class="absolute inset-0 bg-primary-950/80 backdrop-blur-3xl" onclick="closeServerModal()"></div>
    <div class="absolute inset-0 flex items-center justify-center p-6">
        <div
            class="bg-primary-900 border border-white/10 rounded-sm p-10 max-w-md w-full shadow-[0_0_100px_rgba(147,51,234,0.15)] relative">
            <button onclick="closeServerModal()"
                class="absolute top-6 right-6 text-white/20 hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>

            <div class="space-y-8">
                <div class="space-y-2">
                    <span
                        class="text-purple-500 font-black text-[10px] uppercase tracking-[0.4em] italic block">Settings</span>
                    <h2 class="text-3xl font-black text-white uppercase italic tracking-tighter">Choose Server</h2>
                </div>

                <div class="grid gap-4">
                    <button onclick="setServer('1')"
                        class="group w-full p-6 bg-white/5 border border-white/10 rounded-sm hover:bg-purple-600 transition-all text-left">
                        <div class="flex items-center gap-6">
                            <span class="text-2xl font-black text-white/10 group-hover:text-white/20 italic">01</span>
                            <div>
                                <p class="text-sm font-black text-white uppercase tracking-widest italic">Server 1</p>
                                <p class="text-[10px] text-white/30 uppercase tracking-widest mt-1">Default / URL Based
                                </p>
                            </div>
                        </div>
                    </button>

                    <button onclick="setServer('2')"
                        class="group w-full p-6 bg-white/5 border border-white/10 rounded-sm hover:bg-purple-600 transition-all text-left">
                        <div class="flex items-center gap-6">
                            <span class="text-2xl font-black text-white/10 group-hover:text-white/20 italic">02</span>
                            <div>
                                <p class="text-sm font-black text-white uppercase tracking-widest italic">Server 2</p>
                                <p class="text-[10px] text-white/30 uppercase tracking-widest mt-1">Backup / Slug Based
                                </p>
                            </div>
                        </div>
                    </button>
                </div>

                <div class="pt-6 border-t border-white/5 text-center">
                    <p class="text-[10px] font-black text-white/20 uppercase tracking-[0.3em]">
                        Current: <span id="currentServerDisplay" class="text-purple-500 italic">Server 1</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function jumpToPage() {
        const input = document.getElementById('pageJump');
        const page = parseInt(input.value);
        const maxPage = parseInt(input.max);
        if (page >= 1 && page <= maxPage) {
            window.location.href = '/doujin?page=' + page;
        }
    }

    document.getElementById('pageJump').addEventListener('keypress', (e) => {
        if (e.key === 'Enter') jumpToPage();
    });

    // Server modal functions
    const modal = document.getElementById('serverModal');
    const display = document.getElementById('currentServerDisplay');

    document.getElementById('openServerModal').addEventListener('click', () => {
        modal.classList.remove('hidden');
        updateServerDisplay();
    });

    function closeServerModal() {
        modal.classList.add('hidden');
    }

    function setServer(server) {
        localStorage.setItem('doujinServer', server);
        updateServerDisplay();
        setTimeout(closeServerModal, 200);
    }

    function updateServerDisplay() {
        const server = localStorage.getItem('doujinServer') || '1';
        display.textContent = 'Server ' + server;
    }

    document.addEventListener('DOMContentLoaded', updateServerDisplay);
</script>

