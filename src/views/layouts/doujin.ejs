        }
        
        .nav-link::after {
            content: '';
            @apply absolute bottom-0 left-0 w-0 h-0.5 bg-purple-500 transition-all duration-300;
        }
        
        .nav-link:hover::after {
            @apply w-full;
        }
        
        .nav-link.active {
            @apply text-purple-400;
        }
        
        .nav-link.active::after {
            @apply w-full bg-purple-400;
        }
