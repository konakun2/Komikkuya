<div class="min-h-screen bg-transparent pt-32 pb-20">
    <div class="max-w-[1800px] mx-auto px-6 md:px-12">
        <!-- Cinematic Mega Header -->
        <header class="relative mb-16 overflow-hidden">
            <div
                class="flex flex-col md:flex-row md:items-end justify-between gap-8 border-l-8 border-purple-600 pl-8 py-4 bg-white/5 backdrop-blur-3xl rounded-r-sm">
                <div class="space-y-2">
                    <span
                        class="text-purple-500 font-black text-xs uppercase tracking-[0.4em] italic mb-2 block">Category:
                        <%= selectedCategory.charAt(0).toUpperCase() + selectedCategory.slice(1) %></span>
                    <h1
                        class="text-5xl md:text-7xl font-black text-white uppercase italic tracking-tighter leading-none">
                        <%= selectedGenre ? selectedGenre : 'All Genres' %>
                    </h1>
                </div>
                <div class="flex items-center gap-4 bg-black/40 p-2 rounded-sm border border-white/5">
                    <a href="/genre?category=manga<%= selectedGenre ? `&genre=${selectedGenre}` : '' %>"
                        class="px-6 py-2 rounded-sm text-xs font-black uppercase tracking-widest transition-all italic <%= selectedCategory === 'manga' ? 'bg-purple-600 text-white shadow-[0_0_20px_rgba(147,51,234,0.3)]' : 'text-white/30 hover:text-white hover:bg-white/5' %>">
                        Manga
                    </a>
                    <a href="/genre?category=manhwa<%= selectedGenre ? `&genre=${selectedGenre}` : '' %>"
                        class="px-6 py-2 rounded-sm text-xs font-black uppercase tracking-widest transition-all italic <%= selectedCategory === 'manhwa' ? 'bg-purple-600 text-white shadow-[0_0_20px_rgba(147,51,234,0.3)]' : 'text-white/30 hover:text-white hover:bg-white/5' %>">
                        Manhwa
                    </a>
                    <a href="/genre?category=manhua<%= selectedGenre ? `&genre=${selectedGenre}` : '' %>"
                        class="px-6 py-2 rounded-sm text-xs font-black uppercase tracking-widest transition-all italic <%= selectedCategory === 'manhua' ? 'bg-purple-600 text-white shadow-[0_0_20px_rgba(147,51,234,0.3)]' : 'text-white/30 hover:text-white hover:bg-white/5' %>">
                        Manhua
                    </a>
                </div>
            </div>
        </header>

        <div class="flex flex-col lg:flex-row gap-12">
            <!-- Glassmorphism Filter Sidebar -->
            <aside class="w-full lg:w-[350px] space-y-8 shrink-0">
                <div class="bg-primary-800/20 backdrop-blur-3xl border border-white/5 p-8 rounded-sm sticky top-32">
                    <div class="flex items-center justify-between mb-8">
                        <h2 class="text-xl font-black text-white uppercase italic tracking-tighter">Filter Genres</h2>
                        <button id="mobileGenreToggle"
                            class="lg:hidden text-white/30 hover:text-white transition-colors">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>
                    </div>

                    <div id="mobileGenreList"
                        class="hidden lg:block space-y-1 max-h-[70vh] overflow-y-auto pr-4 custom-scrollbar">
                        <a href="/genre?category=<%= selectedCategory %>"
                            class="group block px-4 py-3 rounded-sm transition-all <%= !selectedGenre ? 'bg-purple-600 text-white italic shadow-lg' : 'text-white/40 hover:text-white hover:bg-white/5' %>">
                            <span class="text-xs font-black uppercase tracking-widest">All Genres</span>
                        </a>
                        <% genres.forEach(genre=> { %>
                            <a href="/genre?genre=<%= genre %>&category=<%= selectedCategory %>"
                                class="group block px-4 py-3 rounded-sm transition-all <%= selectedGenre === genre ? 'bg-purple-600 text-white italic shadow-lg font-black' : 'text-white/40 hover:text-white hover:bg-white/5' %>">
                                <span class="text-xs font-black uppercase tracking-widest">
                                    <%= genre %>
                                </span>
                            </a>
                            <% }); %>
                    </div>
                </div>
            </aside>

            <!-- Immersive Manga Grid -->
            <main class="flex-1 min-w-0">
                <% if (items.length> 0) { %>
                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-5 gap-6 md:gap-8">
                        <% items.forEach((item, index)=> { %>
                            <div class="group/card relative animate-fade-in opacity-0"
                                style="animation-delay: <%= index * 50 %>ms; animation-fill-mode: forwards;">
                                <a href="<%= new URL(item.url).pathname %>" class="block space-y-4">
                                    <div
                                        class="relative aspect-[2/3] rounded-sm overflow-hidden border border-white/5 shadow-2xl transition-all duration-700 group-hover/card:scale-105 group-hover/card:-translate-y-2 group-hover/card:shadow-purple-600/20">
                                        <img src="<%= wsrvUrl(item.imageUrl) %>" alt="<%= item.title %>"
                                            class="w-full h-full object-cover transition-transform duration-700 group-hover/card:scale-110"
                                            onerror="this.onerror=null; this.src='/images/fallback.png';">

                                        <!-- Hover Overlay -->
                                        <div
                                            class="absolute inset-0 bg-gradient-to-t from-primary-950 via-primary-950/20 to-transparent opacity-0 group-hover/card:opacity-100 transition-opacity duration-500">
                                        </div>

                                        <!-- Stats Badge -->
                                        <div
                                            class="absolute top-4 right-4 bg-black/60 backdrop-blur-md text-white text-[9px] font-black px-2 py-1 rounded-sm border border-white/10 uppercase tracking-widest">
                                            <%= item.stats.views %>
                                        </div>

                                        <!-- Quick Info -->
                                        <div
                                            class="absolute bottom-4 left-4 right-4 translate-y-4 opacity-0 group-hover/card:translate-y-0 group-hover/card:opacity-100 transition-all duration-500">
                                            <span
                                                class="text-[9px] font-black text-purple-400 uppercase tracking-[0.2em] italic bg-purple-400/10 px-2 py-0.5 rounded-sm">
                                                <%= item.type || selectedCategory %>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="space-y-1 px-1">
                                        <h3
                                            class="text-xs md:text-sm font-black text-white uppercase italic tracking-tighter line-clamp-2 leading-tight group-hover/card:text-purple-400 transition-colors">
                                            <%= item.title %>
                                        </h3>
                                        <% if (item.latestChapter && item.latestChapter.title) { %>
                                            <span
                                                class="text-[9px] font-bold text-white/30 uppercase tracking-[0.2em] italic">
                                                <%= item.latestChapter.title %>
                                            </span>
                                            <% } %>
                                    </div>
                                </a>
                            </div>
                            <% }); %>
                    </div>

                    <!-- Premium Pagination -->
                    <div class="mt-20 flex justify-center">
                        <div
                            class="flex items-center gap-1 bg-white/5 border border-white/5 p-1 rounded-sm backdrop-blur-xl">
                            <a href="/genre?genre=<%= selectedGenre %>&category=<%= selectedCategory %>&page=<%= pagination.currentPage > 1 ? pagination.currentPage - 1 : 1 %>"
                                class="p-3 text-white/40 hover:text-white hover:bg-white/5 transition-all rounded-sm">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                        d="M15 19l-7-7 7-7" />
                                </svg>
                            </a>

                            <div class="flex items-center px-8 space-x-2">
                                <span
                                    class="text-[10px] font-black text-white/20 uppercase tracking-widest italic">Page</span>
                                <span class="text-sm font-black text-white italic">
                                    <%= pagination.currentPage %>
                                </span>
                            </div>

                            <a href="/genre?genre=<%= selectedGenre %>&category=<%= selectedCategory %>&page=<%= pagination.currentPage + 1 %>"
                                class="p-3 text-white/40 hover:text-white hover:bg-white/5 transition-all rounded-sm">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                        d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>
                    </div>
                    <% } else { %>
                        <!-- Cinematic Empty State -->
                        <div
                            class="bg-primary-800/10 backdrop-blur-3xl border border-white/5 p-20 rounded-sm text-center">
                            <div class="space-y-6">
                                <div class="flex justify-center">
                                    <div class="relative">
                                        <div class="absolute inset-0 bg-purple-600/30 blur-3xl rounded-full"></div>
                                        <svg class="w-20 h-20 text-white/10 relative" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1"
                                                d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="space-y-2">
                                    <h3 class="text-3xl font-black text-white uppercase italic tracking-tighter">No
                                        Manga Found</h3>
                                    <p class="text-white/30 text-xs font-bold uppercase tracking-widest">There is
                                        nothing to see in this genre yet.</p>
                                </div>
                                <a href="/genre?category=<%= selectedCategory %>"
                                    class="inline-block px-10 py-4 bg-white text-black font-black uppercase text-xs tracking-[0.2em] italic hover:bg-purple-600 hover:text-white transition-all rounded-sm">
                                    Browse All Genres
                                </a>
                            </div>
                        </div>
                        <% } %>
            </main>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Mobile genre toggle logic
        const toggleBtn = document.getElementById('mobileGenreToggle');
        const genreList = document.getElementById('mobileGenreList');

        if (toggleBtn && genreList) {
            toggleBtn.addEventListener('click', function () {
                genreList.classList.toggle('hidden');
                const svg = this.querySelector('svg');
                if (svg) svg.style.transform = genreList.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
            });
        }
    });
</script>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }
</style>

<%- include('../partials/lazyload') %>