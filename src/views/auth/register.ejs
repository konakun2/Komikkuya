<div class="relative min-h-screen bg-primary-950 overflow-hidden">
    <!-- Background Ambient Glows -->
    <div
        class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-[800px] h-[800px] bg-green-600/10 blur-[120px] rounded-full pointer-events-none animate-drift">
    </div>
    <div
        class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-purple-900/10 blur-[100px] rounded-full pointer-events-none animate-swell">
    </div>

    <div class="max-w-lg mx-auto px-6 py-32 relative z-10">
        <!-- Header -->
        <div class="text-center mb-12">
            <div
                class="flex items-center justify-center gap-3 text-green-500 font-black tracking-[0.3em] uppercase text-xs mb-4">
                <span class="w-12 h-[2px] bg-green-500"></span>
                BERGABUNG
                <span class="w-12 h-[2px] bg-green-500"></span>
            </div>
            <h1 class="text-5xl md:text-6xl font-black text-white italic tracking-tighter uppercase">
                Daftar
            </h1>
            <p class="text-white/40 text-sm mt-4 font-medium">Buat akun Komikkuya gratis</p>
        </div>

        <!-- Error Message -->
        <% if (typeof error !=='undefined' && error) { %>
            <div class="mb-6 p-4 bg-red-500/20 border border-red-500/30 rounded-sm">
                <p class="text-red-400 text-sm font-bold text-center">
                    <%= error %>
                </p>
            </div>
            <% } %>

                <!-- Register Form -->
                <form action="/auth/register" method="POST" class="space-y-6">
                    <div class="space-y-2">
                        <label for="username"
                            class="block text-[10px] font-black text-white/40 uppercase tracking-[0.2em]">Username</label>
                        <input type="text" id="username" name="username" required minlength="3"
                            class="w-full bg-white/5 border border-white/10 rounded-sm px-4 py-4 text-white font-bold placeholder:text-white/20 focus:outline-none focus:border-green-500 transition-colors"
                            placeholder="username_kamu">
                    </div>

                    <div class="space-y-2">
                        <label for="email"
                            class="block text-[10px] font-black text-white/40 uppercase tracking-[0.2em]">Email</label>
                        <input type="email" id="email" name="email" required
                            class="w-full bg-white/5 border border-white/10 rounded-sm px-4 py-4 text-white font-bold placeholder:text-white/20 focus:outline-none focus:border-green-500 transition-colors"
                            placeholder="nama@email.com">
                    </div>

                    <div class="space-y-2">
                        <label for="password"
                            class="block text-[10px] font-black text-white/40 uppercase tracking-[0.2em]">Password</label>
                        <input type="password" id="password" name="password" required minlength="6"
                            class="w-full bg-white/5 border border-white/10 rounded-sm px-4 py-4 text-white font-bold placeholder:text-white/20 focus:outline-none focus:border-green-500 transition-colors"
                            placeholder="••••••••">
                        <p class="text-white/20 text-[10px] font-medium">Minimal 6 karakter</p>
                    </div>

                    <button type="submit"
                        class="w-full py-4 bg-green-600 hover:bg-green-700 text-white font-black uppercase text-sm tracking-widest rounded-sm transition-all shadow-[0_10px_40px_rgba(22,163,74,0.3)] hover:-translate-y-0.5">
                        Daftar Sekarang
                    </button>
                </form>

                <!-- Login Link -->
                <div class="mt-8 text-center">
                    <p class="text-white/40 text-sm">
                        Sudah punya akun?
                        <a href="/auth/login"
                            class="text-green-500 hover:text-green-400 font-bold transition-colors">Login di sini</a>
                    </p>
                </div>

                <!-- Back to Home -->
                <div class="mt-12 text-center">
                    <a href="/"
                        class="inline-flex items-center gap-2 text-white/20 hover:text-white/60 text-xs font-bold uppercase tracking-widest transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                        Kembali ke Home
                    </a>
                </div>
    </div>
</div>

<style>
    @keyframes drift {

        0%,
        100% {
            transform: translate(50%, -50%) scale(1);
        }

        50% {
            transform: translate(45%, -45%) scale(1.1);
        }
    }

    @keyframes swell {

        0%,
        100% {
            transform: translate(-50%, 50%) scale(1);
        }

        50% {
            transform: translate(-45%, 45%) scale(1.15);
        }
    }

    .animate-drift {
        animation: drift 20s ease-in-out infinite;
    }

    .animate-swell {
        animation: swell 25s ease-in-out infinite;
    }
</style>