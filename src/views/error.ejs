<!-- Cinematic Error Page -->
<div class="min-h-screen bg-primary-950 flex items-center justify-center px-4 overflow-hidden relative">

    <!-- Ambient Background Glows -->
    <div
        class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-[600px] h-[600px] bg-purple-600/10 blur-[120px] rounded-full pointer-events-none animate-drift">
    </div>
    <div
        class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-[500px] h-[500px] bg-pink-600/5 blur-[100px] rounded-full pointer-events-none animate-swell">
    </div>

    <div class="max-w-xl w-full relative z-10">
        <div class="text-center">
            <!-- Mega Error Code -->
            <div class="mb-8 relative">
                <h1
                    class="text-[180px] md:text-[220px] font-black text-white/[0.03] uppercase italic tracking-tighter leading-none select-none">
                    <%= error.status===404 ? '404' : error.status || 'ERR' %>
                </h1>
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="text-center">
                        <span
                            class="text-[10px] font-black text-purple-500 uppercase tracking-[0.5em] italic block mb-2">Error</span>
                        <h2 class="text-5xl md:text-7xl font-black text-white uppercase italic tracking-tighter">
                            <% if (error.status===404) { %>
                                <span class="stroke-text">Not</span> Found
                                <% } else { %>
                                    <span class="stroke-text">Something</span> Broke
                                    <% } %>
                        </h2>
                    </div>
                </div>
            </div>

            <!-- Description -->
            <p
                class="text-white/40 text-[11px] font-bold uppercase tracking-[0.3em] leading-loose mb-12 max-w-md mx-auto italic">
                <% if (error.status===404) { %>
                    Halaman yang kamu cari nggak ada atau udah pindah ke dimensi lain.
                    <% } else { %>
                        Ada yang error nih, tim kita udah dapet notif dan lagi dikerjain.
                        <% } %>
            </p>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
                <a href="/"
                    class="group relative flex items-center justify-center gap-3 px-8 py-4 bg-gradient-to-r from-purple-600 to-pink-600 text-white text-xs font-black uppercase tracking-[0.3em] italic overflow-hidden transition-all duration-500 hover:scale-[1.02] active:scale-95 shadow-xl shadow-purple-900/40">
                    <div
                        class="absolute inset-0 bg-white/20 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-1000 skew-x-12">
                    </div>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    <span>Home</span>
                </a>

                <button onclick="history.back()"
                    class="px-8 py-4 border border-white/10 text-white/40 text-xs font-black uppercase tracking-[0.3em] italic hover:bg-white/5 hover:text-white hover:border-white/20 transition-all duration-500">
                    <span>Go Back</span>
                </button>
            </div>

            <% if (error.status===404) { %>
                <!-- Quick Links -->
                <div class="bg-[#1a1625]/60 backdrop-blur-md border border-white/5 p-6">
                    <h3 class="text-[10px] font-black text-purple-500 uppercase tracking-[0.4em] mb-5 italic">Quick
                        Links</h3>
                    <div class="flex flex-wrap justify-center gap-3">
                        <a href="/popular"
                            class="group flex items-center gap-2 px-4 py-2 bg-white/[0.02] border border-white/5 hover:border-purple-500/30 transition-all duration-500">
                            <span class="w-1.5 h-1.5 rounded-full bg-purple-500"></span>
                            <span
                                class="text-[10px] font-black text-white/50 group-hover:text-white uppercase tracking-widest italic transition-colors">Popular</span>
                        </a>
                        <a href="/latest"
                            class="group flex items-center gap-2 px-4 py-2 bg-white/[0.02] border border-white/5 hover:border-blue-500/30 transition-all duration-500">
                            <span class="w-1.5 h-1.5 rounded-full bg-blue-500"></span>
                            <span
                                class="text-[10px] font-black text-white/50 group-hover:text-white uppercase tracking-widest italic transition-colors">Latest</span>
                        </a>
                        <a href="/genre"
                            class="group flex items-center gap-2 px-4 py-2 bg-white/[0.02] border border-white/5 hover:border-green-500/30 transition-all duration-500">
                            <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
                            <span
                                class="text-[10px] font-black text-white/50 group-hover:text-white uppercase tracking-widest italic transition-colors">Genres</span>
                        </a>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
</div>

<style>
    @keyframes drift {

        0%,
        100% {
            transform: translate(50%, -50%) scale(1);
        }

        50% {
            transform: translate(45%, -45%) scale(1.1);
        }
    }

    @keyframes swell {

        0%,
        100% {
            transform: translate(-50%, 50%) scale(1);
            opacity: 0.4;
        }

        50% {
            transform: translate(-45%, 45%) scale(1.15);
            opacity: 0.6;
        }
    }

    .animate-drift {
        animation: drift 20s ease-in-out infinite;
    }

    .animate-swell {
        animation: swell 25s ease-in-out infinite;
    }

    .stroke-text {
        -webkit-text-stroke: 1px rgba(255, 255, 255, 0.2);
        color: transparent;
    }
</style>