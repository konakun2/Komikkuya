<div class="min-h-screen bg-transparent text-white">
    <!-- Premium WhatsApp Banner (Integrated Streaming Style) -->
    <div class="relative w-full h-32 md:h-48 overflow-hidden group/banner">
        <div class="absolute inset-0 bg-gradient-to-r from-green-600/20 to-purple-600/20 mix-blend-overlay"></div>
        <div
            class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/dark-matter.png')] opacity-30">
        </div>
        <div class="container mx-auto px-4 h-full flex items-center justify-between relative z-10">
            <div class="space-y-1">
                <span class="text-green-500 text-[10px] font-black uppercase tracking-[0.4em]">Stay Updated</span>
                <h2 class="text-2xl md:text-4xl font-black italic uppercase tracking-tighter">Join Our Community</h2>
                <p class="text-white/40 text-xs md:text-sm font-bold uppercase tracking-widest hidden sm:block">Dapatkan
                    notifikasi rilis terbaru langsung di genggamanmu</p>
            </div>
            <a href="https://whatsapp.com/channel/0029Vb7586h2UPBFAPxb5S1P"
                class="px-8 py-3 bg-green-600 text-white text-xs font-black uppercase tracking-widest rounded-sm hover:bg-white hover:text-black transition-all italic shadow-2xl flex items-center gap-3">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z" />
                </svg>
                Join WA Channel
            </a>
        </div>
        <div
            class="absolute bottom-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-white/10 to-transparent">
        </div>
    </div>

    <div class="container mx-auto px-4 py-16">
        <!-- Cinematic Header -->
        <div class="mb-16 border-l-8 border-purple-600 pl-8">
            <h1 class="text-6xl md:text-8xl font-black uppercase italic tracking-tighter leading-none">
                Latest <span class="text-purple-600">
                    <%= currentCategory %>
                </span>
            </h1>
            <p class="text-gray-500 mt-4 font-black uppercase tracking-[0.3em] text-sm md:text-base italic">Rilisan
                terhangat dari server kami</p>
        </div>

        <!-- Filter Selection (Streaming Style) -->
        <div class="flex flex-col gap-8 mb-16">
            <div class="flex flex-wrap gap-3 overflow-x-auto pb-4 no-scrollbar">
                <% categories.forEach(category=> { %>
                    <a href="/latest?category=<%= category %>"
                        class="flex-shrink-0 px-8 py-4 rounded-sm text-[10px] font-black uppercase tracking-widest transition-all italic border <%= currentCategory === category ? 'bg-white text-black border-white' : 'bg-transparent text-white/40 border-white/10 hover:border-purple-500 hover:text-white' %>">
                        <%= category %>
                    </a>
                    <% }); %>
            </div>
        </div>

        <!-- Latest Grid (Premium Layout) -->
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-x-6 gap-y-16">
            <% mangaList.forEach(manga=> { %>
                <div class="group/card relative">
                    <a href="/manga/<%= manga.url.split('/manga/')[1].replace('/', '') %>" class="block">
                        <div
                            class="relative aspect-[2/3] overflow-hidden rounded-sm bg-primary-900 shadow-2xl border border-white/5">
                            <img src="<%= wsrvUrl(manga.imageUrl) %>" alt="<%= manga.title %>"
                                class="w-full h-full object-cover transform group-hover/card:scale-110 transition-transform duration-700"
                                loading="lazy" onerror="this.onerror=null; this.src='/images/fallback.png';">

                            <!-- Cinematic Overlay -->
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-black via-black/10 to-transparent opacity-60 group-hover/card:opacity-90 transition-opacity duration-500">
                            </div>

                            <!-- Premium Badges -->
                            <div class="absolute top-3 left-3 flex flex-col gap-2">
                                <span
                                    class="bg-purple-600 text-white text-[9px] font-black px-2 py-0.5 rounded-sm uppercase tracking-tighter shadow-lg">
                                    <%= manga.updateStatus %>
                                </span>
                                <span
                                    class="bg-black/80 backdrop-blur-md text-white text-[9px] font-black px-2 py-0.5 rounded-sm uppercase tracking-tighter border border-white/10">
                                    <%= manga.stats.views %> Views
                                </span>
                            </div>

                            <!-- "NEW" Animated Indicator -->
                            <% if (manga.stats.timeAgo.includes('mnt') || manga.stats.timeAgo.includes('jam')) { %>
                                <div class="absolute top-3 right-3">
                                    <span class="flex h-3 w-3">
                                        <span
                                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                                        <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
                                    </span>
                                </div>
                                <% } %>

                                    <!-- Hover Reveal -->
                                    <div
                                        class="absolute inset-0 flex flex-col justify-end p-6 translate-y-8 opacity-0 group-hover/card:translate-y-0 group-hover/card:opacity-100 transition-all duration-500">
                                        <p
                                            class="text-[9px] font-black text-purple-400 uppercase tracking-widest italic mb-2">
                                            <%= manga.stats.timeAgo %> ago
                                        </p>
                                        <button
                                            class="w-full py-3 bg-white text-black text-xs font-black uppercase rounded-sm hover:bg-purple-600 hover:text-white transition-colors tracking-widest italic shadow-2xl">Lanjut
                                            Baca</button>
                                    </div>
                        </div>

                        <div class="mt-6 space-y-1">
                            <h3
                                class="font-black text-white uppercase tracking-tighter text-sm md:text-base line-clamp-1 group-hover/card:text-purple-400 transition-colors italic">
                                <%= manga.title %>
                            </h3>
                            <div class="flex items-center justify-between">
                                <span class="text-purple-500 font-bold text-xs uppercase tracking-widest italic">
                                    <%= manga.latestChapter?.title || 'Chapter 00' %>
                                </span>
                            </div>
                        </div>
                    </a>
                </div>
                <% }); %>
        </div>

        <!-- Cinematic Pagination -->
        <div class="flex items-center justify-center gap-12 mt-32">
            <a href="/latest?category=<%= pagination.category %>&page=<%= pagination.currentPage > 1 ? pagination.currentPage - 1 : 1 %>"
                class="group flex items-center gap-4 text-xs font-black text-white/40 hover:text-white transition-all uppercase tracking-widest italic <%= pagination.currentPage <= 1 ? 'opacity-0 pointer-events-none' : '' %>">
                <svg class="w-6 h-6 transform group-hover:-translate-x-2 transition-transform" fill="none"
                    stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Previous
            </a>

            <div class="flex flex-col items-center">
                <span class="text-[10px] font-black text-white/20 uppercase tracking-[0.5em] mb-2">Currently At</span>
                <span class="text-5xl font-black text-white italic leading-none">
                    <%= pagination.currentPage %>
                </span>
            </div>

            <a href="/latest?category=<%= pagination.category %>&page=<%= pagination.currentPage + 1 %>"
                class="group flex items-center gap-4 text-xs font-black text-white/40 hover:text-white transition-all uppercase tracking-widest italic">
                Next
                <svg class="w-6 h-6 transform group-hover:translate-x-2 transition-transform" fill="none"
                    stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </a>
        </div>
    </div>
</div>

<script>
    // Add staggered animation to grid items
    document.addEventListener('DOMContentLoaded', function () {
        const gridItems = document.querySelectorAll('.grid > div');

        gridItems.forEach((item, index) => {
            item.style.setProperty('--animation-order', index + 1);
            item.style.animation = `fadeIn 0.5s ease-out forwards`;
            item.style.animationDelay = `${(index + 1) * 0.05}s`;
            item.style.opacity = '0';
        });
    });
</script>

<style>
    /* Add some cool animations */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Custom scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: rgba(45, 36, 57, 0.5);
    }

    ::-webkit-scrollbar-thumb {
        background: rgba(147, 51, 234, 0.5);
        border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: rgba(147, 51, 234, 0.7);
    }
</style>

