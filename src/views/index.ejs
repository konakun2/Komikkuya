<!-- Lazy Loading Script with Intersection Observer -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Configuration
        const lazyConfig = {
            rootMargin: '100px 0px', // Load 100px before entering viewport
            threshold: 0.1
        };

        // Create Intersection Observer
        const lazyObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const img = entry.target;
                    const dataSrc = img.dataset.lazySrc || img.dataset.src;

                    if (dataSrc) {
                        // Create temporary image to preload
                        const tempImg = new Image();
                        tempImg.onload = function () {
                            img.src = dataSrc;
                            img.classList.add('loaded');
                            img.classList.remove('img-skeleton');
                        };
                        tempImg.onerror = function () {
                            img.src = '/images/fallback.png';
                            img.classList.add('loaded');
                            img.classList.remove('img-skeleton');
                        };
                        tempImg.src = dataSrc;
                    }

                    // Stop observing this image
                    observer.unobserve(img);
                }
            });
        }, lazyConfig);

        // Convert existing images to lazy load
        function initLazyLoading() {
            // Select all images in grid sections (not hero carousel)
            const lazyImages = document.querySelectorAll('.grid img:not(.loaded), .popular-content img:not(.loaded)');

            lazyImages.forEach(img => {
                // Skip if already processed
                if (img.dataset.lazyProcessed) return;

                // Store original src
                const originalSrc = img.src;

                // Skip placeholder/fallback images
                if (originalSrc.includes('fallback.png') || originalSrc.includes('data:image')) return;

                // Mark as processed
                img.dataset.lazyProcessed = 'true';
                img.dataset.lazySrc = originalSrc;

                // Set placeholder and add skeleton class
                img.src = 'data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7';
                img.classList.add('lazy-img', 'img-skeleton');

                // Start observing
                lazyObserver.observe(img);
            });
        }

        // Initial load
        initLazyLoading();

        // Re-run on dynamic content (search results, etc.)
        const originalFetch = window.fetch;
        window.fetch = function (...args) {
            return originalFetch.apply(this, args).then(response => {
                // Delay to allow DOM to update
                setTimeout(initLazyLoading, 100);
                return response;
            });
        };
    });
</script>