<div class="min-h-screen bg-primary-900 selection:bg-purple-600 selection:text-white">
    <!-- Smart Cinematic Reader Header -->
    <header id="readerHeader"
        class="fixed top-0 left-0 right-0 z-[100] bg-primary-950/40 backdrop-blur-2xl border-b border-white/5 transition-all duration-700 ease-in-out py-4">
        <div class="max-w-[1800px] mx-auto px-6 flex items-center justify-between">
            <div class="flex items-center gap-6">
                <!-- Back Link with improved logic -->
                <a href="<%= (navigation && navigation.mangaUrl) ? navigation.mangaUrl : '/doujin' %>"
                    class="p-3 bg-white/5 hover:bg-white/10 rounded-sm border border-white/5 transition-all group/back">
                    <svg class="w-5 h-5 text-white/40 group-hover/back:text-white transform group-hover/back:-translate-x-1 transition-all"
                        fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>
                <div class="max-w-md">
                    <h1 class="text-xs font-black text-white/30 uppercase tracking-[0.3em] mb-1 italic truncate">
                        <%= mangaTitle %>
                    </h1>
                    <p class="text-sm font-black text-white uppercase italic tracking-tighter truncate">
                        Chapter <%= chapterNumber %>
                    </p>
                </div>
            </div>

            <!-- Header Controls -->
            <div class="flex items-center gap-4">
                <!-- Server Switcher (Glassmorphism) -->
                <div class="hidden md:flex items-center bg-black/40 border border-white/5 p-1 rounded-sm">
                    <a href="/doujin/chapter/<%= chapterSlug %>?server=1"
                        class="px-4 py-1.5 text-[10px] font-black uppercase tracking-widest rounded-sm transition-all italic <%= currentServer === '1' ? 'bg-purple-600 text-white shadow-lg' : 'text-white/30 hover:text-white hover:bg-white/5' %>">
                        S1
                    </a>
                    <a href="/doujin/chapter/<%= chapterSlug %>?server=2"
                        class="px-4 py-1.5 text-[10px] font-black uppercase tracking-widest rounded-sm transition-all italic <%= currentServer === '2' ? 'bg-purple-600 text-white shadow-lg' : 'text-white/30 hover:text-white hover:bg-white/5' %>">
                        S2
                    </a>
                </div>

                <!-- Navigation Group -->
                <div class="flex items-center bg-white/5 border border-white/5 p-1 rounded-sm">
                    <% if (navigation && navigation.prev) { %>
                        <a href="<%= navigation.prev %>"
                            class="p-2 text-white/40 hover:text-white hover:bg-white/5 transition-all" title="Prev">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                    d="M15 19l-7-7 7-7" />
                            </svg>
                        </a>
                        <% } %>
                            <span
                                class="px-3 text-[9px] font-black text-white/40 uppercase tracking-widest italic border-x border-white/10">
                                <span id="currentPageDisplay">1</span> / <span id="totalPageDisplay">
                                    <%= totalImages %>
                                </span>
                            </span>
                            <% if (navigation && navigation.next) { %>
                                <a href="<%= navigation.next %>"
                                    class="p-2 text-white/40 hover:text-white hover:bg-white/5 transition-all"
                                    title="Next">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                            d="M9 5l7 7-7 7" />
                                    </svg>
                                </a>
                                <% } %>
                </div>

                <button id="toggleUI"
                    class="p-3 bg-purple-600/20 text-purple-400 border border-purple-500/20 rounded-sm hover:bg-purple-600 hover:text-white transition-all">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                </button>
            </div>
        </div>
    </header>

    <!-- Sleek Gradient Progress Bar -->
    <div id="readingProgress" class="fixed top-0 left-0 right-0 h-1 z-[110] bg-white/5">
        <div id="progressBar"
            class="h-full bg-gradient-to-r from-purple-600 via-pink-500 to-purple-400 shadow-[0_0_10px_rgba(168,85,247,0.5)] transition-all duration-300"
            style="width: 0%"></div>
    </div>

    <!-- Main Reader Content -->
    <main class="relative z-10 pt-24 pb-32">
        <div class="max-w-4xl mx-auto space-y-0" id="mangaPages">
            <% images.forEach((image, index)=> { %>
                <div class="relative group" id="page-<%= index + 1 %>">
                    <div class="relative overflow-hidden bg-primary-950 min-h-[400px] flex items-center justify-center">
                        <!-- Use wsrv or original url if server 2 -->
                        <img data-src="<%= image.url %>"
                            src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"
                            alt="Page <%= index + 1 %>"
                            class="w-full h-auto opacity-0 transition-opacity duration-1000 page-img relative z-10"
                            loading="lazy"
                            onerror="this.onerror=null; this.src='/images/fallback.png'; this.parentElement.querySelector('.page-loader')?.remove();">

                        <!-- Cinematic Page Loader -->
                        <div class="page-loader absolute inset-0 flex items-center justify-center z-0">
                            <div class="relative w-16 h-16">
                                <div class="absolute inset-0 border-4 border-purple-600/20 rounded-full"></div>
                                <div
                                    class="absolute inset-0 border-4 border-purple-600 rounded-full border-t-transparent animate-spin">
                                </div>
                                <div class="absolute inset-4 bg-purple-600/20 rounded-full animate-pulse"></div>
                            </div>
                        </div>

                        <div
                            class="absolute bottom-6 right-6 bg-black/60 backdrop-blur-md text-white/30 text-[9px] font-black px-3 py-1.5 rounded-sm uppercase tracking-[0.3em] opacity-0 group-hover:opacity-100 transition-opacity">
                            PG-<%= index + 1 %>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>

        <!-- End Section -->
        <div class="max-w-4xl mx-auto mt-20 px-6">
            <div
                class="bg-primary-800/20 backdrop-blur-3xl border border-white/5 p-16 text-center rounded-sm space-y-8 overflow-hidden relative">
                <div class="absolute inset-0 bg-gradient-to-br from-purple-600/5 to-transparent pointer-events-none">
                </div>
                <div class="relative space-y-4">
                    <span class="text-purple-500 font-black text-xs uppercase tracking-[0.4em] italic block">Chapter
                        Complete</span>
                    <h3 class="text-4xl font-black text-white uppercase italic tracking-tighter leading-none">
                        <%= mangaTitle %><br>
                            <span class="text-white/20 text-lg mt-2 inline-block">Chapter <%= chapterNumber %>
                                    Finished</span>
                    </h3>
                </div>

                <div class="relative flex flex-col md:flex-row items-center justify-center gap-4 pt-4">
                    <% if (navigation && navigation.next) { %>
                        <a href="<%= navigation.next %>"
                            class="w-full md:w-auto px-16 py-5 bg-white text-black font-black uppercase text-xs tracking-[0.3em] hover:bg-purple-600 hover:text-white transition-all duration-500 rounded-sm italic shadow-2xl flex items-center justify-center gap-3">
                            Next Chapter
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                    d="M13 7l5 5-5 5M18 12H6" />
                            </svg>
                        </a>
                        <% } %>
                            <a href="<%= navigation && navigation.mangaUrl ? navigation.mangaUrl : '/doujin' %>"
                                class="w-full md:w-auto px-16 py-5 bg-white/5 border border-white/10 text-white font-black uppercase text-xs tracking-[0.3em] hover:bg-white/10 transition-all rounded-sm italic">
                                Back to Library
                            </a>
                </div>
            </div>
        </div>
    </main>

    <!-- Floating Action Menu -->
    <div id="readerControls"
        class="fixed right-6 bottom-10 z-[100] flex flex-col gap-4 transform transition-all duration-700">
        <div class="bg-primary-950/80 backdrop-blur-3xl border border-white/10 p-2 rounded-sm space-y-2 shadow-2xl">
            <!-- Auto Scroll Control -->
            <button id="autoScrollToggle"
                class="w-12 h-12 flex items-center justify-center text-white/40 hover:text-white hover:bg-white/5 transition-all rounded-sm group relative"
                title="Auto Scroll">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                </svg>
                <div
                    class="absolute right-full mr-4 px-4 py-2 bg-black text-[10px] font-black uppercase tracking-widest text-white rounded-sm opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none italic border border-white/10">
                    Auto Scroll</div>
            </button>

            <!-- Go to Top -->
            <button id="scrollToTop"
                class="w-12 h-12 flex items-center justify-center text-white/40 hover:text-white hover:bg-white/5 transition-all rounded-sm group relative"
                title="Top">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 11l7-7 7 7M12 4v16" />
                </svg>
                <div
                    class="absolute right-full mr-4 px-4 py-2 bg-black text-[10px] font-black uppercase tracking-widest text-white rounded-sm opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none italic border border-white/10">
                    Back to Top</div>
            </button>
        </div>
    </div>
</div>

<style>
    .page-img {
        image-rendering: -webkit-optimize-contrast;
        filter: contrast(1.05) brightness(1.02);
    }

    .header-hidden {
        transform: translateY(-100%);
        opacity: 0;
    }

    .controls-hidden {
        transform: translateX(120%);
        opacity: 0;
    }

    ::-webkit-scrollbar {
        width: 4px;
    }

    ::-webkit-scrollbar-track {
        background: #000;
    }

    ::-webkit-scrollbar-thumb {
        background: #9333ea;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const header = document.getElementById('readerHeader');
        const controls = document.getElementById('readerControls');
        const progressBar = document.getElementById('progressBar');
        const autoScrollBtn = document.getElementById('autoScrollToggle');
        const topBtn = document.getElementById('scrollToTop');
        const toggleUIBtn = document.getElementById('toggleUI');
        const currentPageDisplay = document.getElementById('currentPageDisplay');
        let isUIShown = true;
        let isAutoScrolling = false;
        let scrollSpeed = 2; // Speed multiplier
        let lastScrollY = window.scrollY;

        // Smart Header & Progress
        window.addEventListener('scroll', () => {
            const currentScrollY = window.scrollY;
            if (currentScrollY > lastScrollY && currentScrollY > 200) {
                header.classList.add('header-hidden');
            } else {
                header.classList.remove('header-hidden');
            }

            const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = (winScroll / height) * 100;
            progressBar.style.width = scrolled + "%";

            // Update page indicator based on scroll position
            const pages = document.querySelectorAll('[id^="page-"]');
            let currentPg = 1;
            pages.forEach(p => {
                const rect = p.getBoundingClientRect();
                if (rect.top < window.innerHeight / 2) {
                    currentPg = parseInt(p.id.split('-')[1]);
                }
            });
            currentPageDisplay.textContent = currentPg;

            lastScrollY = currentScrollY;
        }, { passive: true });

        // UI Toggles
        toggleUIBtn.addEventListener('click', () => {
            isUIShown = !isUIShown;
            header.classList.toggle('header-hidden', !isUIShown);
            controls.classList.toggle('controls-hidden', !isUIShown);
        });

        // Auto Scroll Engine
        function doScroll() {
            if (!isAutoScrolling) return;
            window.scrollBy(0, scrollSpeed);
            requestAnimationFrame(doScroll);
        }

        autoScrollBtn.addEventListener('click', () => {
            isAutoScrolling = !isAutoScrolling;
            autoScrollBtn.classList.toggle('bg-purple-600', isAutoScrolling);
            autoScrollBtn.classList.toggle('text-white', isAutoScrolling);
            if (isAutoScrolling) {
                header.classList.add('header-hidden');
                doScroll();
            }
        });

        topBtn.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // Optimized Image Intersection Observer
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px 1000px 0px'
        };

        const imageObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const img = entry.target;
                    if (img.dataset.src) {
                        img.src = img.dataset.src;
                        img.onload = () => {
                            img.classList.remove('opacity-0');
                            img.classList.add('opacity-100');
                            // Remove loader after fade-in
                            setTimeout(() => {
                                img.parentElement.querySelector('.page-loader')?.remove();
                            }, 1000);
                        };
                        img.removeAttribute('data-src');
                    }
                    observer.unobserve(img);
                }
            });
        }, observerOptions);

        document.querySelectorAll('.page-img').forEach(img => imageObserver.observe(img));

        // Sync Server Switcher Links with Local Storage if needed
        const currentServer = '<%= currentServer %>';
        localStorage.setItem('doujinServer', currentServer);
    });
</script>

