<div class="relative min-h-screen bg-primary-950 overflow-hidden">
    <!-- Background Ambient Glows -->
    <div
        class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-[800px] h-[800px] bg-purple-600/10 blur-[120px] rounded-full pointer-events-none">
    </div>
    <div
        class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-purple-900/10 blur-[100px] rounded-full pointer-events-none">
    </div>

    <div class="max-w-[1800px] mx-auto px-6 md:px-12 relative z-10 pt-32 pb-20">
        <!-- Profile Header Section -->
        <header class="relative mb-16">
            <div class="flex flex-col md:flex-row items-center md:items-end gap-8 animate-fade-in">
                <!-- Profile Picture -->
                <div class="relative group">
                    <div class="absolute inset-0 bg-purple-600/30 blur-[40px] rounded-full"></div>
                    <div id="profilePicture"
                        class="relative w-32 h-32 md:w-40 md:h-40 rounded-full overflow-hidden border-4 border-purple-500/50 bg-primary-800">
                        <img id="profileImage" src="/images/default-avatar.png" alt="Profile"
                            class="w-full h-full object-cover">
                    </div>
                </div>

                <!-- User Info -->
                <div class="text-center md:text-left space-y-4">
                    <div
                        class="flex items-center gap-3 justify-center md:justify-start text-purple-500 font-black tracking-[0.3em] uppercase text-xs">
                        <span class="w-12 h-[2px] bg-purple-500 hidden md:block"></span>
                        PUBLIC PROFILE
                    </div>
                    <h1 id="username"
                        class="text-5xl md:text-7xl font-black text-white italic tracking-tighter uppercase leading-none">
                        Loading...
                    </h1>
                    <div id="visibilityBadges" class="flex items-center gap-3 justify-center md:justify-start">
                        <!-- Visibility badges will be inserted here -->
                    </div>
                </div>
            </div>
        </header>

        <!-- Favorites Section -->
        <section id="favoritesSection" class="mb-20 hidden">
            <div class="flex items-center justify-between mb-8">
                <div class="space-y-2">
                    <div class="flex items-center gap-3 text-pink-500 font-black tracking-[0.3em] uppercase text-xs">
                        <span class="w-8 h-[2px] bg-pink-500"></span>
                        COLLECTION
                    </div>
                    <h2 class="text-3xl md:text-4xl font-black text-white italic tracking-tighter uppercase">
                        Favorites
                    </h2>
                </div>
                <span id="favoritesCount" class="text-2xl font-black text-white/30 italic">0</span>
            </div>

            <div id="favoritesGrid"
                class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-6 md:gap-8">
                <!-- Favorites will be loaded here -->
            </div>

            <div id="favoritesEmpty" class="hidden text-center py-12">
                <p class="text-white/40 font-medium">Belum ada favorites yang ditampilkan.</p>
            </div>

            <div id="favoritesPrivate" class="hidden text-center py-12 bg-white/5 rounded-sm border border-white/10">
                <svg class="w-12 h-12 text-white/20 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                <p class="text-white/40 font-bold uppercase tracking-widest text-sm">Favorites is Private</p>
            </div>
        </section>

        <!-- Reading History Section -->
        <section id="historySection" class="hidden">
            <div class="flex items-center justify-between mb-8">
                <div class="space-y-2">
                    <div class="flex items-center gap-3 text-purple-500 font-black tracking-[0.3em] uppercase text-xs">
                        <span class="w-8 h-[2px] bg-purple-500"></span>
                        READING
                    </div>
                    <h2 class="text-3xl md:text-4xl font-black text-white italic tracking-tighter uppercase">
                        History
                    </h2>
                </div>
                <span id="historyCount" class="text-2xl font-black text-white/30 italic">0</span>
            </div>

            <div id="historyGrid"
                class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-6 md:gap-8">
                <!-- History will be loaded here -->
            </div>

            <div id="historyEmpty" class="hidden text-center py-12">
                <p class="text-white/40 font-medium">Belum ada reading history yang ditampilkan.</p>
            </div>

            <div id="historyPrivate" class="hidden text-center py-12 bg-white/5 rounded-sm border border-white/10">
                <svg class="w-12 h-12 text-white/20 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                <p class="text-white/40 font-bold uppercase tracking-widest text-sm">Reading History is Private</p>
            </div>
        </section>

        <!-- Loading State -->
        <div id="loadingState" class="text-center py-20">
            <div
                class="w-16 h-16 border-4 border-purple-500/30 border-t-purple-500 rounded-full animate-spin mx-auto mb-6">
            </div>
            <p class="text-white/40 font-bold uppercase tracking-widest text-sm">Loading Profile...</p>
        </div>

        <!-- Error State -->
        <div id="errorState" class="hidden text-center py-20">
            <svg class="w-20 h-20 text-red-500/50 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <h2 class="text-3xl font-black text-white italic uppercase tracking-tighter mb-2">User Not Found</h2>
            <p class="text-white/40 font-medium">The profile you're looking for doesn't exist.</p>
            <a href="/"
                class="inline-block mt-8 px-8 py-4 bg-purple-600 hover:bg-purple-700 text-white text-xs font-black uppercase tracking-widest rounded-sm transition-all">
                Back to Home
            </a>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', async function () {
        const userId = '<%= userId %>';

        const wsrvUrl = (url) => {
            if (!url) return '/images/fallback.png';
            if (url.startsWith('http')) {
                return `https://wsrv.nl/?url=${encodeURIComponent(url)}&n=-1`;
            }
            return url;
        };

        const formatDate = (timestamp) => {
            const date = new Date(timestamp);
            const now = new Date();
            const diffDays = Math.floor((now - date) / (1000 * 60 * 60 * 24));
            if (diffDays === 0) return 'Tadi';
            if (diffDays === 1) return 'Kemarin';
            if (diffDays < 7) return `${diffDays} hari lalu`;
            return date.toLocaleDateString('id-ID', { day: 'numeric', month: 'short' });
        };

        try {
            // Load profile
            const profileRes = await fetch(`/auth/public/user/${userId}`);
            const profileData = await profileRes.json();

            if (!profileData.success) {
                document.getElementById('loadingState').classList.add('hidden');
                document.getElementById('errorState').classList.remove('hidden');
                return;
            }

            const { user, visibility } = profileData.data;

            // Update profile UI
            document.getElementById('loadingState').classList.add('hidden');
            document.getElementById('username').textContent = user.username;

            if (user.profile_picture) {
                document.getElementById('profileImage').src = `https://auth.komikkuya.my.id${user.profile_picture}`;
            }

            // Visibility badges
            const badgesContainer = document.getElementById('visibilityBadges');
            badgesContainer.innerHTML = `
            <span class="px-3 py-1 text-[9px] font-black uppercase tracking-widest rounded-sm ${visibility.favorites ? 'bg-pink-600/20 text-pink-400 border border-pink-500/30' : 'bg-white/5 text-white/30 border border-white/10'}">
                ${visibility.favorites ? '‚ù§Ô∏è Public Favorites' : 'üîí Private Favorites'}
            </span>
            <span class="px-3 py-1 text-[9px] font-black uppercase tracking-widest rounded-sm ${visibility.readingHistory ? 'bg-purple-600/20 text-purple-400 border border-purple-500/30' : 'bg-white/5 text-white/30 border border-white/10'}">
                ${visibility.readingHistory ? 'üìñ Public History' : 'üîí Private History'}
            </span>
        `;

            // Load favorites
            document.getElementById('favoritesSection').classList.remove('hidden');
            if (visibility.favorites) {
                const favRes = await fetch(`/auth/public/favorites/${userId}`);
                const favData = await favRes.json();

                if (favData.success && favData.data?.favorites?.length > 0) {
                    const favorites = favData.data.favorites;
                    document.getElementById('favoritesCount').textContent = favorites.length;

                    const favGrid = document.getElementById('favoritesGrid');
                    favGrid.innerHTML = favorites.map((item, index) => {
                        const url = item.type === 'doujin' ? `/doujin/${item.slug}` : `/manga/${item.slug}`;
                        const typeBadge = item.type === 'doujin'
                            ? '<span class="bg-red-600/90 text-white text-[8px] font-black px-1.5 py-0.5 rounded-px uppercase">NSFW</span>'
                            : '<span class="bg-pink-600/90 text-white text-[8px] font-black px-1.5 py-0.5 rounded-px uppercase">Manga</span>';

                        return `
                        <a href="${url}" class="group block animate-fade-in" style="animation-delay: ${index * 50}ms">
                            <div class="relative aspect-[2/3] overflow-hidden rounded-sm border border-white/5 shadow-2xl transition-all duration-700 group-hover:scale-102 group-hover:border-pink-500/50 bg-primary-800">
                                <img src="${item.cover}" alt="${item.title}" 
                                    class="w-full h-full object-cover grayscale-[0.3] group-hover:grayscale-0 transition-all duration-1000"
                                    onerror="if(this.src === '${item.cover}'){this.src='https://wsrv.nl/?url=' + encodeURIComponent('${item.cover}') + '&n=-1';}else if(this.src.includes('wsrv.nl')){this.src='/images/fallback.png';}">
                                <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-80 group-hover:opacity-40 transition-opacity"></div>
                                <div class="absolute top-3 left-3">${typeBadge}</div>
                                <div class="absolute bottom-0 left-0 right-0 p-4">
                                    <h3 class="text-white font-black uppercase text-xs italic tracking-tight truncate">${item.title}</h3>
                                </div>
                            </div>
                        </a>
                    `;
                    }).join('');
                } else {
                    document.getElementById('favoritesEmpty').classList.remove('hidden');
                    document.getElementById('favoritesGrid').classList.add('hidden');
                }
            } else {
                document.getElementById('favoritesPrivate').classList.remove('hidden');
                document.getElementById('favoritesGrid').classList.add('hidden');
            }

            // Load reading history
            document.getElementById('historySection').classList.remove('hidden');
            if (visibility.readingHistory) {
                const histRes = await fetch(`/auth/public/reading-history/${userId}?limit=12`);
                const histData = await histRes.json();

                if (histData.success && histData.data?.readingHistory?.length > 0) {
                    const history = histData.data.readingHistory;
                    document.getElementById('historyCount').textContent = history.length;

                    const histGrid = document.getElementById('historyGrid');
                    histGrid.innerHTML = history.map((item, index) => {
                        const typeBadge = item.type === 'doujin'
                            ? '<span class="bg-red-600/90 text-white text-[8px] font-black px-1.5 py-0.5 rounded-px uppercase">NSFW</span>'
                            : '<span class="bg-purple-600/90 text-white text-[8px] font-black px-1.5 py-0.5 rounded-px uppercase">Manga</span>';

                        return `
                        <a href="${item.url}" class="group block animate-fade-in" style="animation-delay: ${index * 50}ms">
                            <div class="relative aspect-[2/3] overflow-hidden rounded-sm border border-white/5 shadow-2xl transition-all duration-700 group-hover:scale-102 group-hover:border-purple-500/50 bg-primary-800">
                                <img src="${item.image}" alt="${item.title}" 
                                    class="w-full h-full object-cover grayscale-[0.3] group-hover:grayscale-0 transition-all duration-1000"
                                    onerror="if(this.src === '${item.image}'){this.src='https://wsrv.nl/?url=' + encodeURIComponent('${item.image}') + '&n=-1';}else if(this.src.includes('wsrv.nl')){this.src='/images/fallback.png';}">
                                <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-80 group-hover:opacity-40 transition-opacity"></div>
                                <div class="absolute top-3 left-3 flex flex-col gap-1">
                                    ${typeBadge}
                                    <span class="bg-black/80 text-white/60 text-[8px] font-black px-1.5 py-0.5 rounded-px uppercase">${formatDate(item.time)}</span>
                                </div>
                                <div class="absolute bottom-0 left-0 right-0 p-4">
                                    <h3 class="text-white font-black uppercase text-xs italic tracking-tight truncate">${item.title}</h3>
                                    <p class="text-white/40 text-[10px] font-bold truncate">${item.chapterTitle || item.chapter_title || ''}</p>
                                </div>
                            </div>
                        </a>
                    `;
                    }).join('');
                } else {
                    document.getElementById('historyEmpty').classList.remove('hidden');
                    document.getElementById('historyGrid').classList.add('hidden');
                }
            } else {
                document.getElementById('historyPrivate').classList.remove('hidden');
                document.getElementById('historyGrid').classList.add('hidden');
            }

        } catch (error) {
            console.error('Error loading profile:', error);
            document.getElementById('loadingState').classList.add('hidden');
            document.getElementById('errorState').classList.remove('hidden');
        }
    });
</script>

<style>
    .stroke-text {
        -webkit-text-stroke: 1px rgba(255, 255, 255, 0.1);
    }

    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .scale-102 {
        transform: scale(1.02);
    }
</style>